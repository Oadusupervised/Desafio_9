<h1>realTimeMessages</h1>
<form id="cargaMessages">
<label for="user">user</label><input id="inputUser" name="user" type="text">
<label for="message">message</label><input id="inputMessages" name="message" type="text">
<button type="submit" id="btnEnviar3">enviar</button>
</form>

 <div class="container mt-5">
    <h2>{{Head}}</h2>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  <link rel="stylesheet" href="../public/css/style.css">
    {{#if hayMensajes}}
      <h4>Mensajes:</h4>
      <div class="container text-center mb-5">
        <div class="row row-gap-5">
          {{#each mensajes}}
            <div class="col-3">
              <div class="card">
                <div class="card-body">
                  <h5 class="card-title">{{this.user}}</h5>
                </div>
                <ul class="list-group list-group-flush">
                  <li class="list-group-item">Message: {{this.message}}</li>
                </ul>
              </div>
            </div>
          {{/each}}
        </div>
      </div>
    {{else}}
      <p class="">no hay mensajes para mostrar</p>
    {{/if}}


<a {{#if hasPrevPage}} href="/views/realTimeMessages/?limit={{limit}}&page={{prevPage}}" {{/if}}>Prev</a>
[{{ page }}]
<a {{#if hasNextPage}} href="/views/realTimeMessages/?limit={{limit}}&page={{nextPage}}" {{/if}}>Next</a><br>
